# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/degenscore
# OR for MongoDB:
# MONGODB_URI=mongodb://localhost:27017/degenscore

# Base Blockchain
BASE_RPC_URL=https://mainnet.base.org
CONTRACT_ADDRESS=0xYourContractAddressHere

# API Keys
BASESCAN_API_KEY=your_basescan_api_key_here
ALCHEMY_API_KEY=your_alchemy_key_here # if using Alchemy

# Indexing Service (if applicable)
INDEXER_API_URL=your_indexer_url
INDEXER_API_KEY=your_indexer_key

# CORS
ALLOWED_ORIGINS=https://degen-score-app.vercel.app,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Caching (Redis - optional)
REDIS_URL=redis://localhost:6379

# JWT Secret (if using authentication)
JWT_SECRET=your_secure_random_string_here
